provider: DATA_PROVIDER_DYNAMIC
entity: default/food-trucks
# initialValues: =@ctx.jig.inputs.menu-items
children:
  - componentId: "@jigx/jc-text-field"
    options:
      label: "id:"
      property: id
      isHidden: true
  - componentId: "@jigx/jc-text-field"
    options:
      label: Truck Name
      property: truck_name
  # - componentId: "@jigx/jc-text-field"
  #   options:
  #     label: Truck Genre
  #     property: truck_genre
  - componentId: "@jigx/jc-text-field"
    options:
      label: Brief Description
      property: truck_description
  - componentId: "@jigx/jc-text-field"
    options:
      label: About Truck
      property: =@ctx.data.records.about_truck
  - componentId: "@jigx/jc-text-field"
    options:
      label: Email
      property: truck_email
      keyboardType: email-address
      autoCapitalize: none
  - componentId: "@jigx/jc-text-field"
    options:
      label: Phone
      property: truck_phone
      keyboardType: phone-pad
  - componentId: "@jigx/jc-image-picker"
    options:
      property: truck_photograph
      type: single
      data: "Select an image of your food truck"
      isRequired: false 

