name: New Truck
referenceId: new-truck
icon: list-add
type: "@jigx/jig/form"
description: Add a new food truck!


# order for food -- drop down menu for each item?
# add in a "+" button for people to add more items
# where would this data be sent to -- ie. how are the food trucks getting this information

actions:
  - children:
      - componentId: "@jigx/ja-submit-form"
        instanceId: new-order
        options:
          formId: new-order
          icon: add
          title: Save Truck
          goBack: home
          onSuccess: 
            title: 'Truck Saved'
            actions:
              - componentId: '@jigx/ja-go-back'
                options:
                  title: "Back to Homepage"
          
      - componentId: '@jigx/ja-go-to'
        instanceId: email-truck
        options:
          title: Contact the Food Truck
          linkTo: form-three-rest
          parameters:
            employee: =@ctx.jig.inputs.orders
                  
                  
