title: Filter, progress and label
type: jig.list
datasources:
  filter-list:
    options:
      data:
        - progress: 0.2
          status: active
          subtitle: Subtitle - active
          title: Title 1
        - progress: 0.56
          status: active
          subtitle: Subtitle - active
          title: Title 2
        - progress: 0.8
          status: inactive
          subtitle: Subtitle - inactive
          title: Title 3
        - progress: 0.3
          status: inactive
          subtitle: Subtitle - inactive
          title: Title 4
        - progress: 0.1
          status: active
          subtitle: Subtitle - active
          title: Title 5
        - progress: 0.9
          status: inactive
          subtitle: Subtitle - inactive
          title: Title 6
    type: datasource.static
data: |
  =$filter(@ctx.datasources.filter-list, function($v, $i, $a) {
    @ctx.jig.state.filter = 'ALL' or $v.status = @ctx.jig.state.filter
  }) 
item:
  options:
    title: =@ctx.current.item.title
    subtitle: =@ctx.current.item.subtitle
    color:
      - color: color2
        when: =@ctx.current.item.status = 'active'
      - color: color4
        when: =@ctx.current.item.status  = 'inactive'
    label:
      color:
        - color: color2
          when: =@ctx.current.item.status = 'active'
      isHidden: =@ctx.current.item.status  = 'inactive'
      title: Label active
    progress: =@ctx.current.item.progress
  type: component.list-item
filter:
  - title: All
    value: ALL
  - title: Active
    value: active
  - title: Inactive
    value: inactive
header:
  options:
    title: Filter, progress and label
    subtitle: List with filter, progress and label
    source:
      uri: https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8dGFzayUyMGxpc3R8ZW58MHx8MHx8&auto=format&fit=crop&w=900&q=60
  type: component.image
